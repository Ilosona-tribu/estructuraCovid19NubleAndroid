<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottom_corner">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="66dp"
            android:layout_height="88dp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo_nuble" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/ic_img_doctor" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context=".ui.test.TestFragment">

        <ImageView
            android:padding="5dp"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_covid_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/test_text_title"
            android:textAlignment="center"
            android:textSize="@dimen/btn_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/btn_width_medium"
            android:layout_height="@dimen/btn_height_medium"
            android:backgroundTint="@color/color_btn_blue_dark"
            android:text="Iniciar Test"
            android:textStyle="bold"
            android:textSize="@dimen/btn_text_size"
            app:cornerRadius="@dimen/corner_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_test"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>