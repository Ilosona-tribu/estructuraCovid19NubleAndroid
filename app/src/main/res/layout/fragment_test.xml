<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/bg_blue_gradient">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="82dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/logonuble" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="225dp"
                android:layout_height="147dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/doctor" />

        </LinearLayout>


    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_corner"
        tools:context=".ui.test.TestFragment">


        <ImageView
            android:id="@+id/covidimage"
            android:layout_width="205dp"
            android:layout_height="66dp"
            android:src="@drawable/titulocovid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_test" />

        <TextView
            android:id="@+id/text_test"
            android:layout_width="385dp"
            android:layout_height="83dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:padding="10dp"
            android:text="@string/test_text_title"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Some questions"
            android:textAlignment="center"
            android:textSize="@dimen/btn_text_size"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/btn_width_medium"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/color_btn_blue_dark"
            android:text="Iniciar Test"
            android:textSize="@dimen/btn_text_size"
            app:cornerRadius="@dimen/corner_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/covidimage"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>