<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_up"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/bg_blue_gradient_trans20"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/bgImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_blue_gradient_trans20" />

        <RelativeLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_logo_nuble" />
        </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_below="@id/layout_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:textAlignment="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="30dp"
        android:text="Wash your hand, let say this one may be longer"
        android:textColor="#FFF"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="35dp"
        android:layout_below="@id/layout_up"
        android:background="@drawable/top_corner">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/detail"
                android:padding="15dp"
                android:elevation="2dp"
                android:background="@drawable/corner_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/large_text"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginTop="207dp"
        android:background="@drawable/ic_circle_bg"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/card_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:tint="#FFF"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"/>

</RelativeLayout>