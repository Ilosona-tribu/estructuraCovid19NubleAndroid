<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_marginBottom="-50dp"
        android:background="@drawable/bg_blue_gradient">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="?attr/homeAsUpIndicator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/logonuble" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="170dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/callcentersola" />


        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/top_corner"
        tools:context=".ui.call.CallFragment">

        <TextView
            android:id="@+id/text_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="@string/txt_call_screen"
            android:textAlignment="center"
            android:textSize="@dimen/btn_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.056" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_call"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/btn_width_large"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/color_btn_blue_light"
            android:text="+92331234569"
            android:textSize="@dimen/btn_text_size"
            app:cornerRadius="@dimen/corner_btn"
            app:icon="@drawable/call"
            app:iconGravity="textStart"
            app:iconSize="@dimen/btn_icon_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_call"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_whatsapp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/btn_width_large"
            android:layout_height="@dimen/btn_height"
            android:backgroundTint="@color/color_btn_green"
            android:text="+92331234568"
            android:textSize="@dimen/btn_text_size"
            app:cornerRadius="@dimen/corner_btn"
            app:icon="@drawable/ic_whatsapp"
            app:iconGravity="textStart"
            app:iconSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_call"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>